    }
    .tax-info{
        display: none;
    }
    .tax-toggle{
        border: 1px solid black;
        border-radius: 1rem;
        height: 3rem;
        padding: 1rem;
        margin-left: 1rem;
        margin-top: 1rem;
        display: flex;
        align-items: center;
        text-align: center;
    }


    /* âœ… Responsive behavior for small screens */
    @media (max-width: 768px) {  
        .filter {
            display: none;  
        }
        .filter:nth-child(-n+4) {  
            display: block;  
        }
    }
</style>


