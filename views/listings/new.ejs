<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-7 offset-2">
        <body>
            <h4>Create a new listing </h4>
            <!-- making key value for optimaztion in our code listing[] -->
            <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
                <div class="mb-1">
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="listing[title]" placeholder="Enter title" class="form-control" required>
                    <div class="valid-feedback">Title is Good! </div>
                </div>

                <div class="mb-1">
                    <label for="description" class="form-label">Description</label> 
                    <textarea type="text" name="listing[description]" placeholder="Enter description" class="form-control" required></textarea> 
                    <div class="invalid-feedback">Please Enter short Description</div>
                </div>
                
                <div class="mb-1">
                    <label for="image" class="form-label">Upload image Lisiting</label>
                    <input type="file" name="listing[image]"class="form-control" >
                    req
                </div>

                <div class="row">
                    <div class="mb-1 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input  name="listing[price]" placeholder="Enter price" class="form-control" required>
                        <div class="invalid-feedback">Please Enter the Price</div>
                    </div>

                    <div class="md-1 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="listing[country]" placeholder="Enter Country" class="form-control" required>
                        <div class="invalid-feedback">Please Enter valid Country</div>
                    </div>

                </div>   
                <div class="md-1">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="listing[location]" placeholder="Enter location" class="form-control" required> 
                    <div class="invalid-feedback">Please Enter valid Location</div>
                </div>
                <br>
                <button class="btn btn-dark add-btn">Add</button>
                <br><br>
            </form>
        </body>
    </div>
</div>
